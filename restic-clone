#!/bin/bash
NAME=`hostname`
export RESTIC_PASSWORD_FILE=~/.resticpw
BACKUP_CMD=rclone
BACKUP_SUBCMD=sync
BACKUP_QUIET=""
SOURCE=/root/backup/$1
DESTINATION=onedrive:backup/$1
/usr/bin/logger "$0: clone (rclone) of ${SOURCE} to ${DESTINATION} started."
#echo ${BACKUP_CMD} ${BACKUP_SUBCMD} ${BACKUP_QUIET} ${SOURCE} ${DESTINATION}
${BACKUP_CMD} ${BACKUP_SUBCMD} ${BACKUP_QUIET} ${SOURCE} ${DESTINATION}
/usr/bin/logger "$0: clone (rclone) of ${SOURCE} to ${DESTINATION} finished."
exit 0
